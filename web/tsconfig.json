{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/api/*": ["../client/src/api/*"],
      "@shared/components/*": ["../client/src/components/*"],
      "@shared/stores/*": ["../client/src/stores/*"],
      "@shared/utils/*": ["../client/src/utils/*"],
      "@shared/composables/*": ["../client/src/composables/*"],
      "@shared/styles/*": ["../client/src/styles/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "../client/src/**/*.ts", "../client/src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
